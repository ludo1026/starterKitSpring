<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<div xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:c="http://java.sun.com/jsp/jstl/core" xmlns:joda="http://www.joda.org/joda/time/tags" xmlns:s="http://www.springframework.org/tags" xmlns:form="http://www.springframework.org/tags/form" version="2.0">
<jsp:directive.page contentType="text/html;charset=UTF-8"/>
<jsp:output omit-xml-declaration="yes"/>

	<div class="container">
		<fieldset class="col-sm-12 bordure">
			<legend class="legende"><s:message code="review"/></legend>
		
			<c:if test="${not empty message}">
				<div id="message" class="alert alert-${message.type.css}"><s:message code="${message.message}"/></div>
			</c:if>
			
	    	<s:url value="/review" var="url_form_submit" />
			<form:form class="form-horizontal" modelAttribute="review" cssClass="well form-horizontal" method="POST" action="${url_form_submit}">
				
				<form:errors path="*" cssClass="alert alert-danger" element="div" />
	    		
				<div class="form-group">
					<label for="customerCode" class="col-sm-2 control-label"><s:message code="review.customerCode"/></label>
					<div class="col-sm-10">
						<form:input path="customerCode" class="form-control" />
						<form:errors cssClass="label label-danger" id="_customerCode_error_id" path="customerCode" />
					</div>
				</div>
				<div class="form-group">
					<label for="creation" class="col-sm-2 control-label"><s:message code="review.creation"/></label>
					<div class="col-sm-10">
						<form:input path="creation" class="form-control"/>
						<form:errors cssClass="label label-danger" id="_creation_error_id" path="creation" />
					</div>
				</div>
				<div class="form-group">
					<label for="lastUpdate" class="col-sm-2 control-label"><s:message code="review.lastUpdate"/></label>
					<div class="col-sm-10">
						<form:input path="lastUpdate" class="form-control"/>
						<form:errors cssClass="label label-danger" id="_lastUpdate_error_id" path="lastUpdate" />
					</div>
				</div>
				<div class="form-group">
					<label for="reviewNote" class="col-sm-2 control-label"><s:message code="review.reviewNote"/></label>
					<div class="col-sm-10">
						<form:input path="reviewNote" class="form-control"/>
						<form:errors cssClass="label label-danger" id="_reviewNote_error_id" path="reviewNote" />
					</div>
				</div>
				<div class="form-group">
					<label for="reviewText" class="col-sm-2 control-label"><s:message code="review.reviewText"/></label>
					<div class="col-sm-10">
						<form:input path="reviewText" class="form-control"/>
						<form:errors cssClass="label label-danger" id="_reviewText_error_id" path="reviewText" />
					</div>
				</div>
				<div class="form-group">
					<label for="book" class="col-sm-2 control-label"><s:message code="review.book"/></label>
					<div class="col-sm-10">
						<select id="_book_id" class="form-control" name="book">
							<option></option>
							<c:forEach items="${books}" var="book">
								<c:choose>
									<c:when test="${not empty review.book and not empty review.book.id and book.id == review.book.id}">
										<option value="${book.id}" selected="selected">${book}</option>
									</c:when>
									<c:otherwise>
										<option value="${book.id}">${book}</option>
									</c:otherwise>
								</c:choose>
							</c:forEach>
						</select>
						<form:errors />
					</div>
				</div>
				<div class="form-group">
					<label for="customer" class="col-sm-2 control-label"><s:message code="review.customer"/></label>
					<div class="col-sm-10">
						<select id="_customer_code" class="form-control" name="customer">
							<option></option>
							<c:forEach items="${customers}" var="customer">
								<c:choose>
									<c:when test="${not empty review.customer and not empty review.customer.code and customer.code == review.customer.code}">
										<option value="${customer.code}" selected="selected">${customer}</option>
									</c:when>
									<c:otherwise>
										<option value="${customer.code}">${customer}</option>
									</c:otherwise>
								</c:choose>
							</c:forEach>
						</select>
						<form:errors />
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-2">
						<s:url var="deleteReviewUrl" value="/review/delete/${review.bookId}/${review.customerCode}"/>
						<a role="button" class="btn btn-default btn-block" href="${deleteReviewUrl}"><s:message code="delete"/></a>
					</div>
    				<div class="col-sm-offset-4 col-sm-2">
		 				<s:url var="allReviewUrl" value="/review"/>
						<a role="button" class="btn btn-default btn-block" href="${allReviewUrl}"><s:message code="back"/></a>
					</div>
    				<div class="col-sm-2">
						<button type="submit" class="btn btn-primary btn-lg btn-block"><s:message code="save"/></button>
					</div>
				</div>
			</form:form>
	    </fieldset>
	</div>	
</div>
