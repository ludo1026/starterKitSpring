<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<div xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:c="http://java.sun.com/jsp/jstl/core" xmlns:joda="http://www.joda.org/joda/time/tags" xmlns:s="http://www.springframework.org/tags" xmlns:form="http://www.springframework.org/tags/form" version="2.0">
<jsp:directive.page contentType="text/html;charset=UTF-8"/>
<jsp:output omit-xml-declaration="yes"/>

	<div class="container">
		<fieldset class="col-sm-12 bordure">
			<legend class="legende"><s:message code="synopsis"/></legend>
		
			<c:if test="${not empty message}">
				<div id="message" class="alert alert-${message.type.css}"><s:message code="${message.message}"/></div>
			</c:if>
			
	    	<s:url value="/synopsis" var="url_form_submit" />
			<form:form class="form-horizontal" modelAttribute="synopsis" cssClass="well form-horizontal" method="POST" action="${url_form_submit}">
				
				<form:errors path="*" cssClass="alert alert-danger" element="div" />
	    		
				<div class="form-group">
					<label for="synopsis" class="col-sm-2 control-label"><s:message code="synopsis.synopsis"/></label>
					<div class="col-sm-10">
						<form:input path="synopsis" class="form-control"/>
						<form:errors cssClass="label label-danger" id="_synopsis_error_id" path="synopsis" />
					</div>
				</div>
				<div class="form-group">
					<label for="book" class="col-sm-2 control-label"><s:message code="synopsis.book"/></label>
					<div class="col-sm-10">
						<select id="_book_id" class="form-control" name="book">
							<option></option>
							<c:forEach items="${books}" var="book">
								<c:choose>
									<c:when test="${not empty synopsis.book and not empty synopsis.book.id and book.id == synopsis.book.id}">
										<option value="${book.id}" selected="selected">${book}</option>
									</c:when>
									<c:otherwise>
										<option value="${book.id}">${book}</option>
									</c:otherwise>
								</c:choose>
							</c:forEach>
						</select>
						<form:errors />
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-2">
						<s:url var="deleteSynopsisUrl" value="/synopsis/delete/${synopsis.bookId}"/>
						<a role="button" class="btn btn-default btn-block" href="${deleteSynopsisUrl}"><s:message code="delete"/></a>
					</div>
    				<div class="col-sm-offset-4 col-sm-2">
		 				<s:url var="allSynopsisUrl" value="/synopsis"/>
						<a role="button" class="btn btn-default btn-block" href="${allSynopsisUrl}"><s:message code="back"/></a>
					</div>
    				<div class="col-sm-2">
						<button type="submit" class="btn btn-primary btn-lg btn-block"><s:message code="save"/></button>
					</div>
				</div>
			</form:form>
	    </fieldset>
	</div>	
</div>
